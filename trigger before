
create table usuario_xxx (id_usuario integer, edad integer);

   create or replace trigger disparador_xxx before insert on usuario_xxx
     for each row 
     
     begin  
               if :new.edad <18 then 
               raise_application_error (-20001,'lo siento eres un pequeÃ±o pervertido');
